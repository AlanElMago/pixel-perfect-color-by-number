{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./dist",
        "moduleResolution": "Node"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
